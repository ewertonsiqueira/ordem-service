# Auto-detect text files and perform LF normalization
* text=auto

# Lock files and dependencies - mark as generated
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true
pnpm-lock.yaml linguist-generated=true

# Build outputs and dist files - mark as generated
dist/** linguist-generated=true
dist-ssr/** linguist-generated=true
build/** linguist-generated=true

# Documentation
*.md linguist-documentation=false

# Source code files - explicitly mark as not generated/vendored
*.js linguist-generated=false linguist-vendored=false
*.vue linguist-generated=false linguist-vendored=false
*.ts linguist-generated=false linguist-vendored=false
*.jsx linguist-generated=false linguist-vendored=false
*.tsx linguist-generated=false linguist-vendored=false
